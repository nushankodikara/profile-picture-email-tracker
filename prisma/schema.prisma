generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Tracker {
    id          String   @id @default(cuid()) @map("_id")
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    name        String
    description String
    enabled     Boolean
    Signals     Signal[]
}

model Signal {
    id        String   @id @default(cuid()) @map("_id")
    createdAt DateTime @default(now())
    trackerId String
    tracker   Tracker  @relation(fields: [trackerId], references: [id])
    ip        String
    userAgent String
}
